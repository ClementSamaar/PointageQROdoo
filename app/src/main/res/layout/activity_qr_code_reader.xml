<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QrCodeReader">

    <TextView
        android:id="@+id/qrApp_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/qrAppName_marginTop_onGranted"

        android:text="@string/app_name"
        android:textSize="@dimen/mainAppTitle_fontSize"
        />

    <SurfaceView
        android:id="@+id/scanner"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerVertical="true"
        app:layout_constraintTop_toBottomOf="@id/qrApp_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cameraPermissionButton"
        />

    <Button
        android:id="@+id/cameraPermissionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/cameraPermissionButton_marginBottom"

        android:backgroundTint="@color/rdtronic_orange"
        android:text="@string/permReq_camera"
        android:textColor="#FFFFFF"
        />

</androidx.constraintlayout.widget.ConstraintLayout>